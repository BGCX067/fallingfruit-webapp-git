<!DOCTYPE html>
<html>
<head>
  <title>Falling Fruit</title>
  <%= stylesheet_link_tag "common", :media => "all" %>
  <%= stylesheet_link_tag "gmaps4rails" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="everything">
<% if notice %>
<div class="notice"><%= notice %></div>
<% end %>
<% if alert %>
<div class="alert"><%= alert %></div>
<% end %>

<%= yield %>

<div id="menu">
<div style="float: right;">
<% if admin_signed_in? %>
Logged in as <%= current_admin.email %>: 
<%= link_to('Account', edit_admin_registration_path) %> |
<%= link_to('Logout', destroy_admin_session_path, :method => :delete) %><br>
<% else %>
<%= link_to('Admin Login', admins_path) %>
<% end %>
</div> 
<%= link_to('Home', root_path) %> |
<%= link_to('Add Source', new_location_path) %>
<% if admin_signed_in? %>
| <%= link_to('Admins', admins_path) %> |
<%= link_to('Regions', regions_path) %> |
<%= link_to('Types', types_path) %>
<% end %>
</div>
</div>
<%= yield :scripts %> 

</body>
</html>
