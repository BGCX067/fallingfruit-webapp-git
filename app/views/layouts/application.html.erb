<!DOCTYPE html>
<html>
<head>
  <title>Falling Fruit</title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% @is_index = (@current_controller == "locations") and (@current_action == "index") %>

<!-- Logo Bar -->
<div id="logobar">
 <img src="logo.png">
 <a href="/">The Falling Fruit Map</a>
 <% if notice or alert %>
 <div id="warnings">
  <div style="float: right; padding: 0.3em;"><a href="#" onclick="$('warnings').hide();">[x]</a></div>
  <% if notice %>
  <div class="notice"><%= notice %></div>
  <% end %>
  <% if alert %>
  <div class="alert"><%= alert %></div>
  <% end %>
 </div>
 <% end %>
</div>

<!-- Menu Bar -->
<div id="menubar">
 <div id="rightcontrols">
 <% if admin_signed_in? %>
  <span id="admin_email"><%= current_admin.email %></span> <%= link_to('Account', edit_admin_registration_path) %><%= link_to('Logout', destroy_admin_session_path, :method => :delete) %>
 <% else %>
  <%= link_to('Admin', admins_path) %>
 <% end %>
 </div>
<%= link_to('Map', root_path, :id => "maplink") %>
<%= link_to('About', '/pages/about') %>
<%= link_to('Data', '/pages/data') %>
<%= link_to('Add Source', new_location_path) %>
<% if @is_index and !admin_signed_in? %>
 <span id="clickmap">(or right-click on map)</span>
<% end %>
<% if admin_signed_in? %>
 <%= link_to('Types', types_path) %>
 <%= link_to('Import', import_locations_path) %>/<%= link_to('Imports', imports_path) %>
 <%= link_to('Admins', admins_path) %>
<% end %>
</div>

<!-- Content -->
<% unless @is_index %>
<div id="content">
 <%= yield %>
 
 <!-- Footer -->
 <div id="footer">
  <a href="http://creativecommons.org/licenses/by-nc/3.0/deed.en_GB">Copyleft</a> (c) <%= Time.now.year %> Falling Fruit  
 </div>
</div>
<% else %>
<%= yield %>
<% end %>

</body>
</html>
