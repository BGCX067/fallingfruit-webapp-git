<!DOCTYPE html>
<html>
<head>
  <title>Falling Fruit</title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% @is_index = (@current_controller == "locations") and (@current_action == "index") %>

<div id="header">

<div id="logo">
 <div style="float: right;"><img src="/logo.png" height="40"></div>
 <h1 style="color: white;">The Falling Fruit Map</h1>
 <% if notice or alert %>
 <div id="warnings">
 <div style="float: right; padding: 0.3em;"><a href="#" onclick="$('warnings').hide();">[x]</a></div>
  <% if notice %>
  <div class="notice"><%= notice %></div>
  <% end %>
  <% if alert %>
  <div class="alert"><%= alert %></div>
  <% end %>
 </div>
 <% end %>
</div>

<div id="menu">
 <div style="float: right;">
 <% if admin_signed_in? %>
 Logged in as <%= current_admin.email %>:
 <%= link_to('Account', edit_admin_registration_path) %> |
 <%= link_to('Logout', destroy_admin_session_path, :method => :delete) %><br>
 <% else %>
 <%= link_to('Admin', admins_path) %>
 <% end %>
 </div>
<%= link_to('Home', root_path) %> |
<%= link_to('About', '/pages/about') %> |
<%= link_to('Add Source', new_location_path) %>
<% if @is_index and !admin_signed_in? %>
(or right click on map)
<% end %>

<% if admin_signed_in? %>
| <%= link_to('Admins', admins_path) %> |
<%= link_to('Import', import_locations_path) %>/<%= link_to('Imports', imports_path) %> |
<%= link_to('Types', types_path) %>
<% end %>
</div> <!-- menu -->

</div> <!-- header -->

<% unless @is_index %>
<div id="content">
 <%= yield %>
 <div id="footer">
  <a href="http://creativecommons.org/licenses/by-nc/3.0/deed.en_GB">Copyleft</a> (c) <%= Time.now.year %> Falling Fruit  
 </div>
</div>
<% else %>
<%= yield %>
<% end %>

</body>
</html>
